{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "react"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    ".serverless",
    ".husky",
    ".github",
    "build",
    "public",
  ]
}
